{
  "name": "emd-precious-metals-vite-ts",
  "version": "1.0.0",
  "description": "Gold, platinum and silver scrap calculator based on current spot prices with React frontend and NodeJS server",
  "private": true,
  "keywords": [
    "pwa",
    "template",
    "react",
    "redux",
    "redux-toolkit",
    "typescript",
    "webpack",
    "bootstrap",
    "heroku",
    "vite",
    "express",
    "api"
  ],
  "scripts": {
    "build:prod": "webpack --config ./webpack.config.js --mode='production'",
    "build:dev": "webpack",
    "test": "jest --watch",
    "client": "npm start --prefix frontend",
    "start:dev": "webpack && node dist/server.js",
    "server": "node dist/server.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint backend/**/*.ts",
    "heroku-prebuild": "NPM_CONFIG_PRODUCTION=false npm install && npm run build:prod",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build:prod --prefix frontend",
    "cancel": "heroku builds:cancel -a emd-precious-metals-vite-ts",
    "logs": "heroku logs -a emd-precious-metals-vite-ts --tail",
    "purge": "heroku builds:cache:purge -a emd-precious-metals-vite-ts",
    "stop": "heroku ps:stop -a emd-precious-metals-vite-ts"
  },
  "author": "Stephen Vaughan",
  "engines": {
    "node": "18.x"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.2",
    "body-parser": "^1.20.1",
    "cloudinary": "^1.34.0",
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "mongodb": "^5.8.0",
    "mongoose": "^6.13.5",
    "pretty-error": "^4.0.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.0.1",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "^29.4.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "jest-html-reporter": "^3.7.0",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5",
    "webpack-dev-server": "^4.11.1"
  }
}
