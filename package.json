{
  "name": "emd-precious-metals-vite-ts",
  "version": "1.0.0",
  "description": "Gold, platinum and silver scrap calculator based on current spot prices with React frontend and NodeJS server",
  "private": true,
  "scripts": {
    "build-dev": "webpack",
    "server": "node dist/server-bundle.js",
    "build-server": "webpack && node dist/server-bundle.js",
    "test": "jest --detectOpenHandles --watchAll",
    "coverage": "jest --coverage",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint backend/**/*.ts",
    "prettier": "prettier --check \"backend/**/*.ts\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Stephen Vaughan",
  "engines": {
    "node": "18.x"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.3",
    "body-parser": "^1.20.1",
    "cloudinary": "^1.34.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "mongodb": "^5.0.1",
    "mongoose": "^6.9.2",
    "pretty-error": "^4.0.0",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "^29.4.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "jest-html-reporter": "^3.7.0",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
